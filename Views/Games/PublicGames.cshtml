@model IEnumerable<ProjektDotNet.Models.Game>

@{
    Layout = "_PublicLayout";
    ViewData["Title"] = "Games";
}

<h2>Games</h2>

<table class="table">
    <caption>Lista på spel</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConsole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameContent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
            @if(item.ImgName != null)
            {
              <a href="img/@item.ImgName" target="_blank"><img src="img/thumb_@item.ImgName" alt="En bild på spelet"/></a>
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condition.Condtition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameConsole.ConsoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameContent.Content)
            </td>

        </tr>
}
    </tbody>
</table>